<% layout('/layouts/boilerplate.ejs') %>

<body>
  <!-- Container at the top of listings  -->
  <div class="top mt-3">
    <!-- filters  -->
    <div id="filters">
      <button
        class="scroll-arrow scroll-arrow-left"
        onclick="filterScrollLeft()"
      >
        <i class="fa-solid fa-angle-left"></i>
      </button>
      <div class="filter-options"></div>
      <button
        class="scroll-arrow scroll-arrow-right"
        onclick="filterScrollRight()"
      >
        <i class="fa-solid fa-angle-right"></i>
      </button>
    </div>
    <!-- switch  -->
    <div class="taxSwitch">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total before taxes</label
        >
      </div>
    </div>
  </div>
  <!-- Conatiner containing all the listings  -->
  <div class="row">
    <% for (let listing of allListings) { %>
    <div class="card mx-auto listing-card" style="width: 20rem">
      <a href="/listings/<%= listing._id %>">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing-image"
          style="height: 20rem"
        />
        <div class="card-body">
          <b><p class="card-text card-title"><%= listing.title %></p></b>
          <% if(listing.price) { let price = listing.price.toLocaleString(); %>
          <p class="card-text card-price"><%= price %> PKR / night</p>
          <p class="card-price gst">&nbsp; &nbsp; + 15% gst</p>
          <% } %>
        </div>
      </a>
    </div>
    <% } %>
  </div>
  <script src="/js/indexPage.js"></script>
</body>
