<% layout('/layouts/boilerplate.ejs') %>
<body>
  <div class="row mb-3">
    <div class="col-8 mx-auto">
      <h3 class="mt-3">Create New Listing</h3>
      <form
        action="/listings"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="form-group mb-3">
          <label for="listing[title]">Title: </label>
          <input
            type="text"
            placeholder="Add a catchy title"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter some title!!</div>
        </div>
        <div class="form-group mb-3">
          <label for="listing[description]">Description: </label>
          <textarea
            name="listing[description]"
            placeholder="Describe your listing"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Enter a short description</div>
        </div>
        <div class="form-group mb-3">
          <label for="listing[image]">Upload Image </label>
          <input
            type="file"
            placeholder="Enter image url/link"
            name="listing[image]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">You must upload an image</div>
        </div>
        <div class="row">
          <div class="form-group mb-3 col-md-5">
            <label for="listing[price]">Price(PKR): </label>
            <input
              type="number"
              placeholder="0"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price cannot be left blank</div>
          </div>
          <div class="form-group mb-3 col-md-7">
            <label for="listing[country]">Country: </label>
            <input
              type="text"
              placeholder="Pakistan"
              name="listing[country]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Invalid Country</div>
          </div>
        </div>
        <div class="form-group mb-3">
          <label for="listing[location]">Location: </label>
          <input
            type="text"
            placeholder="Okara, Punjab"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Invalid Location</div>
        </div>

        <button type="submit" class="btn btn-main btn-danger">Add</button>
        <a href="/listings" class="btn btn-secondary">Back</a>
      </form>
    </div>
  </div>
</body>
